<div class="timeline">タイムライン</div>
<% if @post.empty? %>
  <p>まだ投稿がありません</p>
  <%= link_to "投稿する", new_post_path %><br />
<% else %>
  <%= link_to "投稿する", new_post_path %><br />
  <% @post.each do |post| %>
    <%= link_to "@ #{post.user.screen_name}", user_path(post.user.id) %><br />
    <%= link_to image_tag(post.images.first.image), user_path(post.user.id)%><br />
    <%= post.description %><br />
    <%= post.created_at.strftime('%Y年%m月%d日%H時%M分') %><br />
  <% end %>
<% end %>
